<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <circleprogressbar.CircleProgressBar
        android:id="@+id/progressBar"
        app:mlpb_progress_stoke_width="10dp"
        app:mlpb_enable_circle_background="false"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <www.appawareinc.org.catparty.SnappyRecyclerView
        android:id="@+id/main_recycler_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:background="@drawable/poweredby_giphy"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="right|top" />

    <ImageView
        android:background="@drawable/panthera_logo"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="left|top" />

    <TextView
        android:id="@+id/swipeDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:padding="4dp"
        android:visibility="gone"
        android:text="@string/swipe_save"
        android:textSize="32sp"
        android:textColor="@color/cpgreen"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:id="@+id/swipeUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/cpgreen"
        android:gravity="center"
        android:padding="4dp"
        android:visibility="gone"
        android:text="@string/swipe_share"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top" />

</FrameLayout>
