<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_gravity="left|top">

        <Button
            style="@style/buttons"
            android:id="@+id/purchase"
            android:layout_width="144dp"
            android:layout_height="80dp"
            android:layout_above="@+id/bouncer"
            android:layout_centerHorizontal="true"
            android:text="@string/donate"
            android:visibility="invisible"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:id="@+id/bouncer"
            android:layout_width="320dp"
            android:layout_height="288dp"
            android:background="@drawable/bouncer_tiger"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ImageView
        android:background="@drawable/poweredby_giphy"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginTop="@dimen/margin8"
        android:layout_gravity="right|top"
        android:id="@+id/giphy_img"/>

    <ImageView
        android:background="@drawable/panthera_logo"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin8"
        android:layout_gravity="left|top"
        android:id="@+id/panthera_img"/>

</FrameLayout>