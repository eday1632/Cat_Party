<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TwoRooms">

    <www.appawareinc.org.catparty.StickyViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="www.appawareinc.org.catparty.TwoRooms"
        android:layout_above="@+id/toolbar"/>

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/cpfuchsia"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <www.appawareinc.org.catparty.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:gravity="top"
            app:rb_color="@color/cpfuchsia_ripple"
            app:rb_radius="@dimen/margin24"
            app:rb_rippleAmount="1"
            app:rb_duration="350"
            app:rb_scale="6">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/spinner"
            android:gravity="bottom"
            android:spinnerMode="dropdown"
            />

        </www.appawareinc.org.catparty.RippleBackground>

    </android.support.v7.widget.Toolbar>

</RelativeLayout>
